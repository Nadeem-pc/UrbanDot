<script>
    document.addEventListener('DOMContentLoaded', () => {
        const currentUrl = window.location.pathname;
        const menuItems = document.querySelectorAll('.menu-item');
        
        menuItems.forEach(item => {
            const link = item.querySelector('a');
            const subMenuLinks = item.querySelectorAll('.submenu a');

            if (link && link.getAttribute('href') === currentUrl) {
                item.classList.add('active');
            }

            // Check if any submenu link is active
            subMenuLinks.forEach(subLink => {
                if (subLink.getAttribute('href') === currentUrl) {
                    item.classList.add('active');
                }
            });
        });

        if (currentUrl.includes('/admin/category') || currentUrl.includes('/admin/addCategory') || currentUrl.includes('/admin/editCategory')) {
            document.getElementById('category').classList.add('active');
        }

        if (currentUrl.includes('/admin/products') || currentUrl.includes('/admin/addProduct') || currentUrl.includes('/admin/editProduct')) {
            document.getElementById('products').classList.add('active');
        }

        if (currentUrl.includes('/admin/orders') || currentUrl.includes('/admin/orderDetails')) {
            document.getElementById('orders').classList.add('active');
        }
    });
</script>