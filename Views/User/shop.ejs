<%- include("../../Views/Partials/user/header") %>

<style>
  .header_area .navbar .nav .nav-item.active .nav-link {
    color: black;
  }
  #shopBtn {
    color: #00a884;
  }
  .search-bar{
    margin-left: 200px;
    position: relative;
    left:690px;
    top: 10px;
  }
</style>

<!--================Home Banner Area =================-->
<section class="banner_area">
  <div class="banner_inner d-flex align-items-center">
    <div class="container">
      <div class="banner_content d-md-flex justify-content-between align-items-center">
        <div class="mb-3 mb-md-0">
          <h2>Shop</h2>
          <p>Explore our wide range of products</p>
        </div>
        <div class="page_link">
          <a href="/">Home</a>
          <a href="/shop">Shop</a>
        </div>
      </div>
    </div>
  </div>
</section>
<!--================End Home Banner Area =================-->

<!--================Category Product Area =================-->

<div class="search-bar mb-4 col-lg-4">
  <form method="GET" action="/shop">
    <div class="input-group">
      <input
        type="text"
        class="form-control"
        placeholder="Search products..."
        name="search"
        value="<%= searchTerm %>"
      />
      <input type="hidden" name="category" value="<%= selectedCategory %>">
      <input type="hidden" name="sort" value="<%= sort %>">
      <button class="btn btn-primary" type="submit">Search</button>
    </div>
  </form>
</div>

<section class="cat_product_area section_gap">
  <div class="container">
    <div class="row flex-row-reverse">

     
      <!-- Products Section -->
      <div class="col-lg-9">
        <div class="latest_product_inner">
          <div class="row">
            <% if (products.length > 0) { %>
              <% products.forEach(item => { %>
                <div class="col-lg-4 col-md-6">
                  <div class="single-product">
                    <div class="product-img">
                      <a href="/product/<%= item._id %>">
                        <img class="card-img" src="/uploads/product-images/<%= item.images[0] %>" alt="<%= item.productName %>">
                      </a>
                      <div class="p_icon">
                        <a href="#"><i class="ti-heart"></i></a>
                        <a href="#"><i class="ti-shopping-cart"></i></a>
                      </div>
                    </div>
                    <div class="product-btm">
                      <a href="#" class="d-block">
                        <h4><%= item.productName %></h4>
                      </a>
                      <div class="mt-3">
                        <span class="mr-4">â‚¹<%= item.regularPrice %></span>
                      </div>
                    </div>
                  </div>
                </div>
              <% }); %>
            <% } else { %>
              <p>No products found.</p>
            <% } %>
          </div>
        </div>

        <!-- Pagination -->
        <div class="pagination-area mt-40">
          <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-start">
              <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                  <a
                    class="page-link"
                    href="/shop?page=<%= i %>&category=<%= selectedCategory %>&sort=<%= sort %>&search=<%= searchTerm %>"
                  >
                    <%= i %>
                  </a>
                </li>
              <% } %>
            </ul>
          </nav>
        </div>
      </div>

      <!-- Sidebar Section -->
      <div class="col-lg-3">
        <div class="left_sidebar_area">
          <!-- Categories -->
          <aside class="left_widgets p_filter_widgets">
            <div class="l_w_title">
              <h3>Browse Categories</h3>
            </div>
            <div class="widgets_inner">
              <ul class="list">
                <% categories.forEach(cat => { %>
                  <li>
                    <a href="/shop?category=<%= cat._id %>&sort=<%= sort %>">
                      <%= cat.name %>
                    </a>
                  </li>
                <% }); %>
              </ul>
            </div>
          </aside>

          <!-- Sorting -->
          <aside class="left_widgets p_filter_widgets">
            <div class="l_w_title">
              <h3>Sort By</h3>
            </div>
            <div class="widgets_inner">
              <ul class="list">
                <!-- <li><a href="/shop?sort=new-arrivals">New Arrivals</a></li>
                <li><a href="/shop?sort=low-to-high">Price: Low to High</a></li>
                <li><a href="/shop?sort=high-to-low">Price: High to Low</a></li>
                <li><a href="/shop?sort=name-asc">Name: A to Z</a></li>
                <li><a href="/shop?sort=name-desc">Name: Z to A</a></li> -->

                <li>
                  <a href="/shop?sort=new-arrivals&search=<%= searchTerm %>">New Arrivals</a>
                </li>
                <li>
                  <a href="/shop?sort=low-to-high&search=<%= searchTerm %>">Price: Low to High</a>
                </li>
                <li>
                  <a href="/shop?sort=high-to-low&search=<%= searchTerm %>">Price: High to Low</a>
                </li>
                <li>
                  <a href="/shop?sort=name-asc&search=<%= searchTerm %>">Name: A to Z</a>
                </li>
                <li>
                  <a href="/shop?sort=name-desc&search=<%= searchTerm %>">Name: Z to A</a>
                </li>
              </ul>
            </div>
          </aside>
        </div>
      </div>
    </div>
  </div>
</section>
<!--================End Category Product Area =================-->

<%- include("../../Views/Partials/user/footer") %>